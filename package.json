{
  "name": "invokej",
  "version": "0.4.4",
  "description": "A JavaScript/Bun implementation inspired by Python's Invoke - task execution and shell command management",
  "main": "cli.js",
  "type": "module",
  "exports": {
    ".": "./cli.js",
    "./plugins": "./plugins.js",
    "./context": "./context.js",
    "./package.json": "./package.json"
  },
  "bin": {
    "invokej": "./cli.js",
    "invj": "./cli.js"
  },
  "files": [
    "cli.js",
    "context.js",
    "tasks.js",
    "plugins.js",
    "plugins/",
    "examples/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:context": "bun test test/context.test.js",
    "test:cli": "bun test test/cli.test.js",
    "test:plugins": "bun test test/todo-mgr.test.js test/wall-mgr.test.js test/ai-work-mgr.test.js",
    "test:integration": "bun test test/integration/",
    "dev": "bun cli.js",
    "example": "bun cli.js --list"
  },
  "keywords": [
    "invoke",
    "tasks",
    "cli",
    "shell",
    "automation",
    "build-tool",
    "task-runner",
    "bun",
    "javascript"
  ],
  "author": "Peter Bunyan <pete@blueshed.co.uk>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/blueshed/invokej.git"
  },
  "bugs": {
    "url": "https://github.com/blueshed/invokej/issues"
  },
  "homepage": "https://github.com/blueshed/invokej#readme",
  "engines": {
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.24",
    "bun-types": "^1.3.1"
  }
}
